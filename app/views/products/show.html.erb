<div id="main">
  <div class="gallery">

  	<div id="productImage">
  		<div id="slideshow" class="pics">
  		  <%= link_to image_tag(@product.picture.url, :size => '420x420', :alt => @product.name) + (@product.new? ? image_tag('new.png', :alt => 'New Item', :class => 'productNew') : ''), @product.picture.url, :class => 'single_image' %>
  		</div>
  	</div>

  	<div id="itemDetails">
  		<h2><%= @product.name %></h2>
  		<p class="productPrice"><%= number_to_currency @product.price %></p>
  		<%= simple_format @product.description %>
  		<p></p>

      <p>
        <%= link_to raw('<span class="buttonAddToShoppingBag">Add to Shopping Cart</span>'), cart_path(:product_id => @product.id), :method => :post %>
      </p>
  	</div>

  </div>
</div>
